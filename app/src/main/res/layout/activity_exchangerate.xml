<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.futeng.happypays.activity.ExchangerateActivity">

    <RelativeLayout
        android:id="@+id/RelativeLayout_quicktrans"
        android:background="@color/home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88">

        <ImageView
            android:id="@+id/exchange_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/whiteback"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/x40"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="汇率换算"
            android:textSize="@dimen/y34"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/rela_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="实时汇率"
            android:textSize="@dimen/y30"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="36dp"/>




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y203">
        
        
        <LinearLayout
            android:id="@+id/LinearLayout_exchangerate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y124"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/national_flag"
                android:layout_width="@dimen/x47"
                android:layout_height="@dimen/y47"
                android:src="@mipmap/flagtongyong"
                android:layout_marginLeft="@dimen/x28"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/national"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择国家"
                android:textColor="#333333"
                android:textSize="@dimen/y32"
                android:layout_marginLeft="@dimen/x14"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/national_easy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"
                android:textColor="#333333"
                android:textSize="@dimen/y32"
                android:layout_marginLeft="@dimen/x14"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/y25"
                android:src="@mipmap/jiantou"
                android:layout_marginLeft="@dimen/x22"
                android:layout_gravity="center_vertical"/>




        </LinearLayout>

        <EditText
            android:id="@+id/EditText_exchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y128"
            android:textSize="@dimen/y46"
            android:textAlignment="textEnd"
            android:text="100"
            android:maxLength="9"
            android:background="@null"
            android:textColor="#4B90EB"/>
        
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#F1F1F1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y203">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y124"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x47"
                android:layout_height="@dimen/y47"
                android:src="@mipmap/cny"
                android:layout_marginLeft="@dimen/x28"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人民币 CNY"
                android:textColor="#333333"
                android:textSize="@dimen/y32"
                android:layout_marginLeft="@dimen/x14"
                android:layout_gravity="center_vertical"/>





        </LinearLayout>

        <TextView
            android:id="@+id/rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y128"
            android:textAlignment="textEnd"
            android:textSize="@dimen/y46"
            android:text="xxx"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:layout_marginLeft="@dimen/x92"
        android:background="#F1F1F1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y143">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="市场参考"
            android:textColor="#999999"
            android:textSize="@dimen/y28"
            android:layout_marginTop="@dimen/y28"
            android:layout_marginLeft="@dimen/x94"
            android:id="@+id/textView3"/>

        <TextView
            android:id="@+id/rates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"
            android:textColor="#999999"
            android:textSize="@dimen/y28"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignEnd="@+id/textView4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来自公开市场报价"
            android:textColor="#999999"
            android:textSize="@dimen/y28"
            android:layout_marginTop="@dimen/y82"
            android:layout_marginLeft="@dimen/x451"
            android:id="@+id/textView4"/>






    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F1F7"/>





</LinearLayout>
