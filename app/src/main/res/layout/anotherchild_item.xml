<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y71"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x31"
                    android:layout_height="@dimen/y34"
                    android:layout_marginLeft="@dimen/x94"
                    android:layout_marginTop="@dimen/y20"
                    android:background="@mipmap/accountnumber"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x26"
                    android:text="账号:"
                    android:textColor="#333333"
                    android:textSize="@dimen/y22"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/nopass_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:text="xxxxxxxxxxx"
                    android:textColor="#999999"
                    android:textSize="@dimen/y19"
                    android:layout_gravity="center"/>


            </LinearLayout>












</LinearLayout>
