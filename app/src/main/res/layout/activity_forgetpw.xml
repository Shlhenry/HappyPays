<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/fog_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/common_title_reback"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:layout_alignParentStart="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="忘记密码"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>




    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f6f6f6"/>



    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/regone"/>

        <EditText
            android:id="@+id/fog_tel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:paddingLeft="10dp"
            android:gravity="bottom"
            android:layout_marginBottom="12dp"
            android:hint="请输入手机号"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="30dp"

        android:background="#c0c0c0"/>

    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/regtwo"/>

        <EditText
            android:id="@+id/fog_yzm"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:paddingLeft="10dp"
            android:gravity="bottom"
            android:layout_marginBottom="12dp"
            android:hint="请输入验证码"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.futeng.happypays.tools.TimerButton
                android:id="@+id/text_yzm"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/yuanjiao"
                android:hint="获取验证码"
                android:textColor="#fff"
                android:gravity="center"
                android:textColorHint="#fff" />



        </LinearLayout>











    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="30dp"

        android:background="#c0c0c0"/>

    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/pwd_icon"/>

        <EditText
            android:id="@+id/fog_load_pw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:paddingLeft="10dp"
            android:gravity="bottom"
            android:inputType="numberPassword"
            android:layout_marginBottom="12dp"
            android:hint="请输入密码"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="30dp"

        android:background="#c0c0c0"/>

    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/pwd_icon"/>

        <EditText
            android:id="@+id/fog_load_pws"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:paddingLeft="10dp"
            android:gravity="bottom"
            android:inputType="numberPassword"
            android:layout_marginBottom="12dp"
            android:hint="请输入密码"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="30dp"

        android:background="#c0c0c0"/>

    <Button
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/fog_btn_ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/yuanjiao"
        android:text="确认"
        android:textColor="#fff"
        android:textSize="18sp" />

</LinearLayout>
