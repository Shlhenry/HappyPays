<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:textColor="#000"
            android:paddingLeft="5dp"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="类型:"/>
        <TextView
            android:id="@+id/moneychange_awtName"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:text="xxxxxxxxxx"/>

        <TextView
            android:textColor="#000"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="类别:"/>
        <TextView
            android:id="@+id/moneychange_mccName"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:text="xxxxxxxxxx"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:textColor="#000"
            android:paddingLeft="5dp"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="变动金额:"/>
        <TextView
            android:id="@+id/moneychange_wamActMoney"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:text="xxxxxxxxxx"/>

    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:textColor="#000"
            android:paddingLeft="5dp"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="变动前金额:"/>
        <TextView
            android:id="@+id/moneychange_wamBeforeMoney"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:text="xxxxxxxxxx"/>
        <TextView
            android:textColor="#000"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="变动后金额:"/>
        <TextView
            android:id="@+id/moneychange_wamAfterMoney"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:text="xxxxxxxxxx"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">


        <TextView
            android:textColor="#000"
            android:paddingLeft="5dp"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="变动时间:"/>
        <TextView
            android:id="@+id/moneychange_wamDate"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:text="xxxxxxxxxx"/>
    </LinearLayout>


</LinearLayout>
