<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/xian"
            android:layout_width="@dimen/x82"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/logistic_up"
                android:layout_width="@dimen/x2"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/x58"
                android:layout_weight="1"
                android:background="#DDDDDD" />
            <TextView
                android:id="@+id/logistic_img"
                android:layout_width="@dimen/x19"
                android:layout_height="@dimen/y19"
                android:layout_centerVertical="true"
                android:background="@drawable/yuan"
                android:layout_marginLeft="@dimen/x50"/>
            <TextView
                android:id="@+id/logistic_down"
                android:layout_width="@dimen/x2"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/x58"
                android:layout_weight="1"
                android:background="#DDDDDD" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/xian"
            android:orientation="vertical">

            <TextView
                android:id="@+id/logistic_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y11"
                android:text="xxxx-xx-xx xx-xx-xx"
                android:textColor="#999999"
                android:textSize="@dimen/y26" />

            <TextView
                android:id="@+id/logistic_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xxxx"
                android:textColor="#999999"
                android:textSize="@dimen/y26" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y10"
                android:background="#fff"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>