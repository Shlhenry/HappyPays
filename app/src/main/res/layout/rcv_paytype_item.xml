<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/x8"
    android:paddingRight="@dimen/x8"
    android:paddingTop="@dimen/y8"
    android:paddingBottom="@dimen/y8"
    android:background="#F0F1F7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x209"
        android:layout_height="@dimen/y183"
        android:background="@drawable/shape_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rcv_paytype_item_icon"
            android:layout_width="@dimen/x32"
            android:layout_height="@dimen/y32"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y26"
            android:src="@mipmap/smallwechat" />

        <TextView
            android:id="@+id/rcv_paytype_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y14"
            android:text="微信T1"
            android:textSize="@dimen/y22" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="交易笔数:"
                android:textSize="@dimen/y22" />

            <TextView
                android:id="@+id/rcv_paytype_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="xx"
                android:textSize="@dimen/y22" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="笔"
                android:textSize="@dimen/y22" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="交易金额:"
                android:textSize="@dimen/y22" />

            <TextView
                android:id="@+id/rcv_paytype_item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="xx"
                android:textSize="@dimen/y22" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="元"
                android:textSize="@dimen/y22" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>

