<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.futeng.happypays.activity.watermoney.watermanage.WaterMoneyNewActivity">

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/waterall_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/common_title_reback"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:layout_alignParentStart="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="流水管理"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>




    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f6f6f6"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x140"
        android:scrollbars="none">

        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/xxxtl_2"
            layout_editor_absoluteX="8dp"
            layout_editor_absoluteY="0dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x140"
            android:background="#ffffff"
            tl:tl_iconHeight="23dp"
            tl:tl_iconWidth="@dimen/x160"
            tl:tl_indicator_color="#2C97DE"
            tl:tl_indicator_height="0dp"
            tl:tl_textSelectColor="#2C97DE"
            tl:tl_textUnselectColor="#66000000"
            tl:tl_textsize="12sp"
            tl:tl_iconMargin="@dimen/y21"
            tl:tl_underline_color="#DDDDDD"
            tl:tl_underline_height="1dp" />

    </HorizontalScrollView>

    <android.support.v4.view.ViewPager
        android:id="@+id/xxxvp_2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>
