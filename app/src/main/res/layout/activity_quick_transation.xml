<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f1f7"
    tools:context="com.futeng.happypays.activity.erweimashoukuan.QuickTransationActivity">

    <RelativeLayout
        android:id="@+id/RelativeLayout_quicktrans"
        android:background="@color/home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88">

        <ImageView
            android:id="@+id/quicktrans_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/whiteback"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/x40"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="无卡快捷"
            android:textSize="@dimen/y34"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/RelativeLayout_quicktrans"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y284"
        android:background="@color/home">

    <RelativeLayout
            android:id="@+id/quickback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y86"
            android:layout_marginTop="@dimen/y17"
            android:layout_marginLeft="@dimen/x67"
            android:layout_marginRight="@dimen/x67"
            android:background="@mipmap/notselecteddling"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/quicktyi"
                android:layout_width="@dimen/x326"
                android:layout_height="@dimen/y71"
                android:background="@mipmap/selectedtyi"/>

            <ImageView
                android:id="@+id/quickdlin"
                android:layout_width="@dimen/x326"
                android:layout_height="@dimen/y71"
                android:background="@mipmap/selecteddling"
                android:visibility="gone"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>


        </RelativeLayout>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trans_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y279"
        android:layout_marginLeft="@dimen/x62"
        android:layout_marginRight="@dimen/x62"
        android:background="@drawable/whiteyuanjiao"
        android:layout_marginTop="@dimen/y240"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/quickchild"
            android:layout_width="@dimen/x109"
            android:layout_height="@dimen/y38"
            android:layout_marginTop="@dimen/y25"
            android:layout_marginLeft="@dimen/x64"
            android:background="@mipmap/tyi"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费金额"
                android:gravity="center"
                android:textSize="@dimen/y22"
                android:textColor="#999999"
                android:layout_marginLeft="@dimen/x64"/>

            <EditText
                android:id="@+id/EditText_quickmoney"
                android:layout_width="@dimen/x350"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y42"
                android:textColor="#333333"
                android:textAlignment="textEnd"
                android:background="@null"
                android:hint="￥0.00"
                android:maxLength="10"
                android:inputType="numberDecimal"
                android:textColorHint="#C2C1C1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:layout_marginLeft="@dimen/x10"
                android:textColor="#999999"
                android:textSize="@dimen/y20"/>


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="#c3c3c3"
            android:layout_marginTop="@dimen/y5"
            android:layout_marginLeft="@dimen/x63"
            android:layout_marginRight="@dimen/x63"/>

        <RelativeLayout
            android:id="@+id/quick_selectcard"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/selectshowbank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加银行卡"
                android:textColor="#333333"
                android:textSize="@dimen/y21"
                android:layout_marginEnd="11dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/imageView11"/>
            <ImageView
                android:layout_width="@dimen/x13"
                android:layout_height="@dimen/y22"
                android:src="@mipmap/xuanze"
                android:layout_marginEnd="30dp"
                android:id="@+id/imageView11"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_one"
        android:layout_below="@+id/trans_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y235"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/y48">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y40"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/y22"
                android:text="银行卡号:"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x90"/>

            <TextView
                android:id="@+id/quick_bankcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/y22"
                android:gravity="center"
                android:text="xxxxxxxxxxxxxxxxxxx"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y74"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y10">

            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y47"
                android:src="@mipmap/phonenumber"
                android:layout_marginTop="@dimen/y5"
                android:layout_marginLeft="@dimen/x93"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/quick_tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入您在银行预留的手机号"
                android:textColorHint="#B9B9B9"
                android:textSize="@dimen/y25"
                android:paddingTop="@dimen/y10"
                android:layout_marginLeft="@dimen/x30"/>
            
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="#E5E5E5"
            android:layout_marginLeft="@dimen/x127"
            android:layout_marginRight="@dimen/x124"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y74"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x39"
                android:layout_height="@dimen/y30"
                android:src="@mipmap/idnumber"
                android:layout_marginTop="@dimen/y5"
                android:layout_marginLeft="@dimen/x90"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/quick_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入您的身份证号"
                android:textColorHint="#B9B9B9"
                android:textSize="@dimen/y25"
                android:paddingTop="@dimen/y10"
                android:layout_marginLeft="@dimen/x30"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="#E5E5E5"
            android:layout_marginLeft="@dimen/x127"
            android:layout_marginRight="@dimen/x124"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/yzm_linear"
        android:layout_below="@+id/LinearLayout_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y74"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x39"
            android:layout_height="@dimen/y30"
            android:src="@mipmap/yanzhengma"
            android:layout_marginTop="@dimen/y5"
            android:layout_marginLeft="@dimen/x90"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/EditText_yzm"
            android:layout_width="@dimen/x200"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入验证码"
            android:textColorHint="#B9B9B9"
            android:textSize="@dimen/y25"
            android:paddingTop="@dimen/y10"
            android:layout_marginLeft="@dimen/x30"/>

        <TextView
            android:layout_width="@dimen/x2"
            android:layout_height="match_parent"
            android:background="#B9B9B9"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <com.futeng.happypays.tools.TimerButton
            android:id="@+id/btn_yzm"
            android:layout_width="@dimen/x200"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#333333"
            android:text="获取验证码"
            android:background="#fff"
            android:textSize="@dimen/y25"/>

    </LinearLayout>

    <TextView
        android:id="@+id/quick_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y77"
        android:background="@drawable/yuanjiao"
        android:layout_marginLeft="@dimen/x100"
        android:layout_marginRight="@dimen/x100"
        android:text="下单支付"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="@dimen/y28"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />

</RelativeLayout>
