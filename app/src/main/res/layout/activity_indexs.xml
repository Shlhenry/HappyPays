<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/RelativeLayout_shishi"
        android:background="@color/home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88">

        <ImageView
            android:id="@+id/index_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/whiteback"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/x40"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="币种切换"
            android:textSize="@dimen/y34"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

    <RelativeLayout
    android:layout_below="@+id/RelativeLayout_shishi"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

    <com.futeng.happypays.tools.IndexBar
        android:id="@+id/index_bar"
        android:layout_width="30dp"
        app:normalColor="@color/home"
        app:selecColor="#fff"
        app:indexSize="14sp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/index_bar_bg"/>

    <TextView
        android:id="@+id/tv_letter"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@drawable/tv_index_bg"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="invisible"/>

</RelativeLayout>

</RelativeLayout>