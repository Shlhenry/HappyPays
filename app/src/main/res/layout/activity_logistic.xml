<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:background="@color/home">

        <ImageView
            android:id="@+id/logistic_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/x40"
            android:src="@mipmap/whiteback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="查看物流"
            android:textColor="#fff"
            android:textSize="@dimen/y34"
            android:id="@+id/textView8" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y192"
        android:orientation="horizontal">
        
        <ImageView
            android:layout_width="@dimen/x128"
            android:layout_height="@dimen/y128"
            android:src="@mipmap/redbull"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x44"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x27"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_marginTop="@dimen/y22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物流状态:"
                    android:textColor="#333333"
                    android:textSize="@dimen/y30"/>
                <TextView
                    android:id="@+id/logistic_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运输中"
                    android:textColor="#FDB318"
                    android:layout_marginLeft="@dimen/x20"
                    android:textSize="@dimen/y26"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/y7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="承运公司:"
                    android:textColor="#333333"
                    android:textSize="@dimen/y30"/>
                <TextView
                    android:id="@+id/company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx"
                    android:textColor="#FDB318"
                    android:layout_marginLeft="@dimen/x20"
                    android:textSize="@dimen/y26"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/y7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运单号:"
                    android:textColor="#333333"
                    android:textSize="@dimen/y30"/>
                <TextView
                    android:id="@+id/express_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无"
                    android:textColor="#FDB318"
                    android:layout_marginLeft="@dimen/x20"
                    android:textSize="@dimen/y26"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y11"
        android:background="#F0F1F7"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y79"
        android:text="物流跟踪"
        android:paddingLeft="@dimen/x42"
        android:textSize="@dimen/y30"
        android:textColor="#333333"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#E8E8E8"/>

    <ListView
        android:visibility="gone"
        android:id="@+id/logistic_lv"
        android:layout_marginTop="@dimen/y31"
        android:layout_width="match_parent"
        android:divider="@null"
        android:layout_height="match_parent">

    </ListView>

    <ImageView
        android:visibility="gone"
        android:id="@+id/showimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y100"
        android:src="@mipmap/nowuliuxinxi"/>






</LinearLayout>  