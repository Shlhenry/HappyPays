<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/getstore_item_img"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/y160"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginBottom="@dimen/y20"
            android:src="@mipmap/redbull" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x63"
            android:orientation="vertical">

            <TextView
                android:id="@+id/getstore_item_comname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:maxLines="1"
                android:text="红牛维生素多功能饮料"
                android:textColor="#333333"
                android:textSize="@dimen/y32" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="件数:"
                    android:textColor="#999999"
                    android:textSize="@dimen/y26" />

                <TextView
                    android:id="@+id/getstore_item_exrccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x"
                    android:textColor="#999999"
                    android:textSize="@dimen/y26" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="件"
                    android:textColor="#999999"
                    android:textSize="@dimen/y26" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兑换积分:"
                    android:textColor="#999999"
                    android:textSize="@dimen/y26" />

                <TextView
                    android:id="@+id/getstore_item_oldintegral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx"
                    android:textColor="#333333"
                    android:textSize="@dimen/y26" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textColor="#333333"
                    android:textSize="@dimen/y26" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#E8E8E8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="@dimen/y25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x63">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号:"
                android:textSize="@dimen/y30"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/getstore_item_exrcOrderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxxxxxxxxx"
                android:textSize="@dimen/y30"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/x15"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/y22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x63">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换时间:"
                android:textSize="@dimen/y30"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/getstore_item_exrctime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxx-xxx-xxx-x:"
                android:textSize="@dimen/y30"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/x15"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/y22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x63">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单状态:"
                android:textSize="@dimen/y30"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/getstore_item_paoState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"
                android:textSize="@dimen/y30"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/x15"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="查看物流"
                android:textColor="#fa9d0a"
                android:textSize="@dimen/y25"
                android:gravity="center"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:layout_marginLeft="@dimen/x250"
                android:background="@drawable/look_logistics"/>


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y15"
        android:background="#eeeeee"/>


</LinearLayout>