<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" 
              android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90">

        <ImageView
            android:id="@+id/country_img"
            android:layout_width="@dimen/x47"
            android:layout_height="@dimen/y47"
            android:src="@mipmap/flagtongyong"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"/>

        <TextView
            android:id="@+id/country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国家"
            android:layout_alignTop="@+id/country_exchange"
            android:layout_toEndOf="@+id/country_img"
            android:layout_marginStart="14dp"/>

        <TextView
            android:id="@+id/country_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="汇率"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"/>


    </RelativeLayout>
    
    

</LinearLayout>
