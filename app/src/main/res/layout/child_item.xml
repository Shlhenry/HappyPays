<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="@dimen/x22"
        android:layout_marginRight="@dimen/x22"
        android:layout_marginTop="@dimen/y17"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y112"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x34"
            android:layout_height="@dimen/y35"
            android:background="@mipmap/bluebusinessname"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginLeft="@dimen/x94"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x38">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商户名称:"
                    android:textSize="@dimen/y25"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/comment_amname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx"
                    android:textSize="@dimen/y21"
                    android:layout_marginLeft="@dimen/x18"
                    android:textColor="#999999"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号:"
                    android:textSize="@dimen/y25"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/comment_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx"
                    android:textSize="@dimen/y21"
                    android:layout_marginLeft="@dimen/x18"
                    android:textColor="#999999"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="等级:"
                    android:textSize="@dimen/y25"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/comment_dengji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx"
                    android:textSize="@dimen/y21"
                    android:layout_marginLeft="@dimen/x18"
                    android:textColor="#999999"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
