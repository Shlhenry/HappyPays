<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.futeng.happypays.activity.CalculateActivity">

    <RelativeLayout
        android:id="@+id/RelativeLayout_quicktrans"
        android:background="@color/home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88">

        <ImageView
            android:id="@+id/quicktrans_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/whiteback"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/x40"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="计算器"
            android:textSize="@dimen/y34"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y289"
        android:background="@color/home">


        <TextView
            android:id="@+id/edittext_calculate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:background="@null"
            android:textSize="@dimen/y60"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/y160"
            android:textAlignment="textEnd"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="AC"
                android:gravity="center"
                android:textSize="@dimen/y40"/>
            <TextView
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="#C3C3C3"/>
            <TextView
                android:id="@+id/fu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+/-"
                android:gravity="center"
                android:textSize="@dimen/y40"/>
            <TextView
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="#C3C3C3"/>
            <TextView
                android:id="@+id/baifen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="%"
                android:gravity="center"
                android:textSize="@dimen/y40"/>
            <TextView
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="#C3C3C3"/>
            <TextView
                android:id="@+id/chu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="/"
                android:gravity="center"
                android:textSize="@dimen/y40"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="#C3C3C3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textColor="#4B90EB"
                android:gravity="center"
                android:textSize="@dimen/y40"/>
            <TextView
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="#C3C3C3"/>
            <TextView
                android:id="@+id/eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textColor="#4B90EB"
                android:gravity="center"
                android:textSize="@dimen/y40"/>
            <TextView
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="#C3C3C3"/>
            <TextView
                android:id="@+id/nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textColor="#4B90EB"
                android:gravity="center"
                android:textSize="@dimen/y40"/>
            <TextView
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="#C3C3C3"/>
            <TextView
                android:id="@+id/cheng"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="x"
                android:gravity="center"
                android:textSize="@dimen/y40"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="#C3C3C3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textColor="#4B90EB"
                android:gravity="center"
                android:textSize="@dimen/y40"/>
            <TextView
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="#C3C3C3"/>
            <TextView
                android:id="@+id/five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textColor="#4B90EB"
                android:gravity="center"
                android:textSize="@dimen/y40"/>
            <TextView
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="#C3C3C3"/>
            <TextView
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textColor="#4B90EB"
                android:gravity="center"
                android:textSize="@dimen/y40"/>
            <TextView
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="#C3C3C3"/>
            <TextView
                android:id="@+id/jia"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:gravity="center"
                android:textSize="@dimen/y40"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="#C3C3C3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:gravity="center"
                android:textColor="#4B90EB"
                android:textSize="@dimen/y40"/>
            <TextView
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="#C3C3C3"/>
            <TextView
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textColor="#4B90EB"
                android:gravity="center"
                android:textSize="@dimen/y40"/>
            <TextView
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="#C3C3C3"/>
            <TextView
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textColor="#4B90EB"
                android:gravity="center"
                android:textSize="@dimen/y40"/>
            <TextView
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="#C3C3C3"/>
            <TextView
                android:id="@+id/jian"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:gravity="center"
                android:textSize="@dimen/y40"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="#C3C3C3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="0"
                android:textColor="#4B90EB"
                android:gravity="center"
                android:textSize="@dimen/y40"/>
            <TextView
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="#C3C3C3"/>
            <TextView
                android:id="@+id/dian"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textColor="#4B90EB"
                android:gravity="center"
                android:textSize="@dimen/y40"/>
            <TextView
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="#C3C3C3"/>
            <TextView
                android:id="@+id/dengyu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:gravity="center"
                android:textSize="@dimen/y40"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="#C3C3C3"/>

    </LinearLayout>






</LinearLayout>
