<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/select_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x37"
                android:text="邵亨林"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/select_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x29"
                android:text="18795883130"
                android:textColor="#666666" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y23"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_default"
                android:layout_width="@dimen/x66"
                android:layout_height="@dimen/y30"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x45"
                android:visibility="gone"
                android:background="@mipmap/storedefault" />

            <TextView
                android:id="@+id/select_address"
                android:layout_width="@dimen/x492"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x39"
                android:text="xxxxxxxxxx"
                android:textColor="#666666"
                android:textSize="@dimen/y29"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/x76" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y26"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/select_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x40"
                android:text="设为默认"
                android:textColor="#666666"
                android:textSize="@dimen/y25" />


            <LinearLayout
                android:id="@+id/select_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x250"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x28"
                    android:layout_height="@dimen/y32"
                    android:src="@mipmap/edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="编辑"
                    android:textColor="#666666"
                    android:textSize="@dimen/y25" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/select_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x29"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x28"
                    android:layout_height="@dimen/y32"
                    android:src="@mipmap/delete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="删除"
                    android:textColor="#666666"
                    android:textSize="@dimen/y25" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>