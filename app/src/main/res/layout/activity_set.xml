<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.futeng.happypays.activity.fgmentfour.SetActivity">

    <RelativeLayout
    android:id="@+id/RelativeLayout_quicktrans"
    android:background="@color/home"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y88">

    <ImageView
        android:id="@+id/set_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/whiteback"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/x40"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="设置"
        android:textSize="@dimen/y34"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>


    <LinearLayout
        android:id="@+id/fg_pw"
        android:layout_marginTop="@dimen/y250"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y89"
        android:orientation="horizontal"
        android:background="#fff">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textColor="#333333"
            android:textSize="@dimen/y26"
            android:layout_marginLeft="@dimen/x139"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView7"
            android:layout_marginStart="21dp"/>


        <ImageView
            android:layout_width="@dimen/x11"
            android:layout_height="@dimen/y18"
            android:src="@mipmap/next"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x500"/>


    </LinearLayout>

    <TextView
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="80dp"
        android:text="退出登入"
        android:textColor="#fff"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/yuanjiao"/>


</LinearLayout>
